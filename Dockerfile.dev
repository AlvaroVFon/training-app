# Development Dockerfile with Hot Reload
FROM node:24-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install all dependencies (including dev dependencies)
RUN pnpm install --frozen-lockfile

# Copy all configuration files
COPY nest-cli.json tsconfig.json tsconfig.build.json eslint.config.mjs ./

# Copy source code (will be overridden by volume in dev)
COPY src ./src

# Expose port
EXPOSE 3000

# Start in development mode with watch mode for hot reload
CMD ["sh", "-c", "pnpm run build && pnpm run start:dev"]
